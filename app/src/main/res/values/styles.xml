<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DrinkingTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorBlack</item>

        <item name="colorPrimaryDark">@color/Gray1</item>

        <item name="colorAccent">@color/Gold</item>

        <item name="android:colorBackground">@color/wineColor</item>

    </style>

    <style name="DrinkingTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrinkingTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DrinkingTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
