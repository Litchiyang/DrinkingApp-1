<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drunk_mode_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="urmc.drinkingapp.model.DrunkModeDefaultActivity">

    <Button
        android:layout_height="60dp"
        android:id="@+id/presettext_button"
        android:text="TEXT"
        android:layout_width="201dp"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Invite Friend"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/invtiefriend_button"
        android:layout_below="@+id/call_button"
        android:layout_alignStart="@+id/presettext_button" />

    <Button
        android:text="CALL CAB"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/call_button"
        android:layout_below="@+id/presettext_button"
        android:layout_alignStart="@+id/invtiefriend_button" />

    <Button
        android:text="Emergency"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/emergency_button"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/invtiefriend_button"
        android:layout_alignStart="@+id/invtiefriend_button" />
</RelativeLayout>
